
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own document to manage their link to a corps.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Access to a corps document is granted if the user's own document
    // contains a matching corpsId. This allows multiple users to share one corps' data.
    match /corps/{corpsId} {
      allow read, write: if request.auth != null &&
                          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.corpsId == corpsId;
    }
  }
}
